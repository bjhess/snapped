<% previous_url, next_url = photo.previous_url, photo.next_url %>

<div class="photo">
  <div class="asset">
    <%= link_nav_if_url(%{<img src="#{photo.display_image_url}" style="width: 990px;"/>}, previous_url) %>
	  
	</div>
  <div class="nav"> 
    <p>
      <% previous_url, next_url = photo.previous_url, photo.next_url %>
      <%= link_nav_if_url("&larr; Prev", previous_url) %>
      <%= link_nav_if_url("Next &rarr;", next_url) %>
    </p>
  </div>
	
	<div class="info">
  	<h2 class="title"><%= photo.title %></h2>

  	<div class="entry">
  		<%= photo.body_html %>
  	</div>
  	
  	<div class="footing">
      <p class="meta">
        Snapped on <%= photo.taken_at.strftime("%b %d, %Y") %>
        &nbsp;<a href="<%= photo.original_url %>"><img src="images/flickr11.png" width="11" height="11" /></a>
      </p>

  	  <% if admin? %>
  	    <div class="admin">
    		  <a href="<%= photo.url %>/edit">edit</a>
    		  <form name="delete_form" method="post" action="<%= photo.url %>">
            <input type="hidden" name="_method" value="delete" />
            <a href="#" onClick="if(confirm('Delete? Really?')) {document.delete_form.submit();return false;} else {return false;}">delete</a>
          </form>
          &middot;
    		  <a href="/photos/new">new</a>
        </div>
    	<% end %>
    </div>
  </div>
  
</div>
